---
import Header from "../components/Header.astro"
import Footer from "../components/Footer.astro"
const {title = "Upamanyu Das"} = Astro.props
---
<!doctype html>
<html lang="en" class="dark m-0 w-full h-full">
	<head>
    <script>
      if (
        localStorage.theme === 'dark' || window.matchMedia('(prefers-color-scheme: dark)').matches
      ) {
        document.documentElement.classList.add('dark');
      } else {
        document.documentElement.classList.remove('dark');
      }
    </script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	</head>
	<body class="m-0 w-full h-full bg-slate-50 dark:bg-slate-900">
    <div class="mx-auto min-h-full flex flex-col md:w-4/6 w-5/6">
      <Header />
      <main class="flex-grow w-10/12 mx-auto container">
        <slot />
      </main>
      <Footer />
    </div>
	</body>

  <script>
    const root = document.documentElement;
    const toggleTheme = () => {
      const isDark = root.classList.contains('dark');
      root.classList.toggle('dark');
      localStorage.setItem('theme', isDark ? 'light': 'dark');
    };
    document.getElementById('theme-selector-mobile')?.addEventListener('click', () => {
      console.log("here")
      toggleTheme()
    });
    document.getElementById('theme-selector-desktop')?.addEventListener('click', () => {
      console.log("here")
      toggleTheme()
    });
  </script>
</html>
